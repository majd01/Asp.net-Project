<!--assosiate this view with model-->
@model IEnumerable<CarMaintainer.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Manage Service Types</h2>
<hr />
<div class="form-border">
    <p style="padding-bottom:15px;">
        <a class="btn btn-sm btn-primary toLeft" asp-action="Create">Create New</a>
    </p>
    <table class="table table-hover table-condensed">
        <tr>
            <th>
                <p class="toLeft">
                    @Html.DisplayNameFor(m => m.Name)
                </p>
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p class="toLeft">
                        @Html.DisplayFor(m => item.Name)
                    </p>
                </td>
                <td class="toLeft">
                    <p class="toLeft">
                        @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { ServiceId = item.Id })
                    </p>
                </td>
            </tr>

        }
    </table>
</div>
